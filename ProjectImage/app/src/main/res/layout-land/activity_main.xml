<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.img.projectimage.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="@string/get_last_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saved_picture"
            android:background="@color/colorAccent"
            android:height="75dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:drawableLeft="@android:drawable/stat_sys_download"
            android:layout_marginTop="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="@string/take_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/take_photo"
            android:background="@android:color/holo_green_light"
            android:height="75dp"
            android:drawableStart="@android:drawable/ic_menu_camera"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/load_picture"
            android:layout_alignStart="@+id/load_picture"
            android:layout_alignRight="@+id/saved_picture"
            android:layout_alignEnd="@+id/saved_picture" />

        <Button
            android:text="@string/get_picture_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/load_picture"
            android:background="@android:color/holo_blue_light"
            android:height="75dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:drawableLeft="@android:drawable/ic_menu_gallery"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/saved_picture"
            android:layout_alignStart="@+id/saved_picture"
            android:layout_alignRight="@+id/saved_picture"
            android:layout_alignEnd="@+id/saved_picture" />

    </RelativeLayout>

</RelativeLayout>
